<ul class="nav nav-tabs tabs-underlined" id="myTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link tab-underlined active" id="today-tab" data-toggle="tab" href="#today" role="tab" aria-controls="today" aria-selected="true">Today</a>
  </li>
  <li class="nav-item">
    <a class="nav-link tab-underlined" id="tomorrow-tab" data-toggle="tab" href="#tomorrow" role="tab" aria-controls="tomorrow" aria-selected="false">Tomorrow</a>
  </li>
  <li class="nav-item">
    <a class="nav-link tab-underlined" id="later-tab" data-toggle="tab" href="#later" role="tab" aria-controls="later" aria-selected="false">Later</a>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="today" role="tabpanel" aria-labelledby="today-tab">
    <% @activities.each do |activity| %>
      <ul>
        <% if activity.start_time.day == Date.today.mday && activity.start_time.month == Date.today.month %>
          <li>
            <%= activity.start_time %> - <%= activity.end_time %>  <%= activity.name %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="tab-pane fade" id="tomorrow" role="tabpanel" aria-labelledby="tomorrow-tab">
    <% @activities.each do |activity| %>
      <ul>
        <% if activity.start_time.day == Date.tomorrow.mday %>
          <li>
            <%= activity.start_time %> - <%= activity.end_time %>  <%= activity.name %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="tab-pane fade" id="later" role="tabpanel" aria-labelledby="later-tab">
    <% @activities.each do |activity| %>
      <ul>
        <% if activity.start_time > Date.tomorrow && activity.start_time.day != Date.tomorrow.mday %>
          <li>
            <%= activity.start_time %> - <%= activity.end_time %>  <%= activity.name %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>


