<div class="activity-wrapper">
  <div class="inner-activity boxed">
    <div class="date-info-wrapper">
      <div class="date-info">
        <%= activity.start_time.day%>.<%= activity.start_time.month%>
      </div>
      <div class="time-info">
        <%= activity.start_time.hour%>:<%= activity.start_time.min %> - <%= activity.end_time.hour%>:<%= activity.end_time.min %>
      </div>
    </div>
    <div class="user-wrapper">
      <div class="photo-wrapper">
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/arthur-littm", class: "avatar-large", alt: "avatar-large" %>
      </div>
    </div>
    <div class="description-wrapper">
      <div class="category">
        <i class="fas fa-book"></i> <%= activity.name %>
      </div>
      <div class="link">
        <i class="fas fa-external-link-alt"></i> <%= link_to activity.link.truncate(45),activity.link %>
      </div>
    </div>
    <div class="actions-wrapper">
      <div class="button-black-inverse"> Join Challenge</div>
    </div>
  </div>
</div>
